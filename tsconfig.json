{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "baseUrl": ".",
        "lib": [
            "dom", "es6"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "react": [
                "node_modules/@types/react"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}